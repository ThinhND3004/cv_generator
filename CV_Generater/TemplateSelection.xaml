<Window x:Class="CV_Generator.TemplateSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CV_Generator"
        mc:Ignorable="d"
        Title="Choose Template" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Choose a template to generate:" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,33,0,0" 
                   FontSize="16" />
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Margin="0,50,0,0">
            <Button Content="Template 1" 
                    Width="70" 
                    Click="Template1_Click" />
            <Button Content="Template 2" 
                    Width="70" 
                    Click="Template2_Click" />
        </StackPanel>
    </Grid>
</Window>
