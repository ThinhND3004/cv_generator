    </Window.Resources>
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu bar -->
            <RowDefinition Height="*"/>
            <!-- Content area -->
        </Grid.RowDefinitions>

        <!-- Transparent Overlay for Click Outside Detection -->
        <Border Background="Transparent" 
                Visibility="Collapsed" 
                Name="Overlay"
                Grid.RowSpan="2" 
                Panel.ZIndex="100"
                MouseDown="Overlay_MouseDown"/>

        <!-- Menu Bar -->
        <Rectangle HorizontalAlignment="Center" Height="40" Fill="White" VerticalAlignment="Center" Width="462" Margin="5 5 5 25"/>

        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="5 5 5 25">

            <!-- FontComboBox from Extended WPF Toolkit -->
            <ComboBox Name="FontsComboBox" Width="150" Margin="0,0,15,0" 
              SelectionChanged="FontsComboBox_SelectionChanged" VerticalContentAlignment="Center" Style="{StaticResource CVHeaderComboBox}"/>

            <!--Theme Color-->
            <Button VerticalAlignment="Center" Margin="0,0,10,0" x:Name="ThemeColorButton" Click="ThemeColorButton_Click" 
                    Style="{StaticResource HeaderButton}">
                <!-- Set the Button's content to display both a label and the ellipse -->
                <StackPanel Orientation="Horizontal">
                    <!-- Label for the Button -->
                    <TextBlock Text="Theme Color" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <!-- Color Indicator Circle (Ellipse) -->
                    <Ellipse x:Name="ColorEllipse" Width="20" Height="20" Fill="{DynamicResource ThemeColorBrush}"/>
                </StackPanel>
            </Button>

            <!-- Popup with ColorCanvas -->
            <Popup x:Name="ColorCanvasPopup" PlacementTarget="{Binding ElementName=ThemeColorButton}" 
                   Placement="Bottom" HorizontalAlignment="Center">
                <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                    <xctk:ColorCanvas x:Name="PopupColorCanvas" Height="280" 
                                      SelectedColorChanged="PopupColorCanvas_SelectedColorChanged"/>
                </Border>
            </Popup>

            <!-- Button to Select Background Image -->
            <Button Content="CV Background" Width="100" Margin="5" Style="{StaticResource HeaderButton}" x:Name="BackgroundButton" Click="BackgroundButton_Click"/>
            <!-- Popup for Background Image Selection -->
            <Popup x:Name="BackgroundPopup" PlacementTarget="{Binding ElementName=BackgroundButton}" Placement="Bottom" AllowsTransparency="True">
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Choose a background" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <WrapPanel x:Name="ImageSelectionPanel" Width="300" ItemWidth="90" ItemHeight="90" Orientation="Horizontal" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Popup>

        </StackPanel>

        <!-- Content area for CV sections -->
        <ScrollViewer x:Name="ContentScrollViewer" Background="White" Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Center" Margin="10 0 10 0">
            <!-- Add CV content here -->
            <StackPanel HorizontalAlignment="Center" Width="21cm" MinHeight="29.7cm">

                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="164"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header Section -->
                    <Border x:Name="AvatarBorder" 
                            BorderBrush="Transparent" 
                            BorderThickness="2" 
                            CornerRadius="100"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            MouseEnter="AvatarBorder_MouseEnter" 
                            MouseLeave="AvatarBorder_MouseLeave">
                        <Grid x:Name="AvatarGrid" Width="160" Height="160" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Avatar Ellipse -->
                            <Ellipse x:Name="AvatarEllipse" Width="160" Height="160" Fill="LightGray" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <!-- Hover Button (Sửa ảnh) -->
                            <Button x:Name="UploadAvatarButton" 
                                    Content="✏️" 
                                    Background="{DynamicResource ThemeColorBrush}" 
                                    Foreground="White" 
                                    Width="35" 
                                    Height="35" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Bottom" 
                                    Visibility="Collapsed" 
                                    Click="UploadAvatarButton_Click" 
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="100">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="{TemplateBinding Content}" FontWeight="Bold" FontSize="14" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="0 15">
                        <Border BorderThickness="0 0 0 1" BorderBrush="{DynamicResource ThemeColorBrush}">
                            <Grid Margin="10 0 10 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="Vu Hoang Hieu Ngan (K18 HCM)" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}" TextWrapping="Wrap"/>
                                <TextBox Grid.Column="1" x:Name="JobPositionTextBox" Text="Job Position" FontSize="12" Foreground="{DynamicResource ThemeColorBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>

                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,10,0,0">
                                <Grid Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="📅" Foreground="Black" FontSize="12"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="DateTextBoxk" Text="DD/MM/YY  " Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="📞" Foreground="Black" FontSize="12"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="PhoneTextBox" Text="0123 456 789  " Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="📍" Foreground="Black" FontSize="12"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="AddressTextBox" Text="Address" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,10,0,0">
                                <Grid Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="👤" Foreground="Black" FontSize="12" FontWeight="ExtraBold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="GenderTextBox" Text="Male/Female" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="✉️" Foreground="Black" FontSize="12"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="EmailTextBox" Text="0123 456 789  " Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="🔗" Foreground="Black" FontSize="12"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="WebsiteTextBox" Text="Address" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                </Grid>

                <!-- Sections -->
                <StackPanel Margin="15,20,15,10" x:Name="BodyCVStackPanel">

                    <StackPanel Margin="0,10,0,10">
                        <Grid MouseEnter="Section_MouseEnter" MouseLeave="Section_MouseLeave" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- Objective Section -->
                            
                            <TextBox Style="{DynamicResource TitleTextBox}" Text="OBJECTIVE"/>
                            
                            <TextBox Grid.Row="1" x:Name="ObjectiveContentTextBlock" Text="Career goals: short-term, long-term." Margin="0,5,0,0"/>

                            <!-- Add Section Button, initially hidden -->
                            <Button Grid.Row="2" x:Uid="AddSectionButton" Content="+ Add Section" Width="120" Height="35" HorizontalAlignment="Center" Cursor="Hand" Click="AddSectionButton_Click" IsEnabled="True" Background="{DynamicResource ThemeColorBrush}" Foreground="White" FontSize="14" FontWeight="Bold" Panel.ZIndex="100" Visibility="Collapsed">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    
                    </StackPanel>
                    <!-- Education Section -->
                    <StackPanel Margin="0,10,0,10">
                        
                            <TextBox Style="{DynamicResource TitleTextBox}" Text="EDUCATION"/>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="1*"/>

                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,10,0,0">
                                    <TextBox Text="Courses / Subjects" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}"/>
                                    <TextBox Text="From - To"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="0,10,0,0">
                                    <TextBox Text="School name" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}"/>
                                    <TextBox Text="Education description"/>
                                </StackPanel>
                                <!--Add Item Button here-->
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!--Work experience-->
                    <StackPanel Margin="0,10,0,10">
                        
                            <TextBox Style="{DynamicResource TitleTextBox}" Text="WORK EXPERIENCE"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="1*"/>

                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,10,0,0">
                                <TextBox Text="Position" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}"/>
                                <TextBox Text="From - To"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,10,0,0">
                                <TextBox Text="Company name" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}"/>
                                <TextBox Text="Experience description"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!--Activities-->
                    <StackPanel Margin="0,10,0,10">
                        
                            <TextBox Style="{DynamicResource TitleTextBox}" Text="ACTIVITIES"/>

                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="1*"/>

                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,10,0,0">
                                    <TextBox Text="Position" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}"/>
                                    <TextBox Text="From - To"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="0,10,0,0">
                                    <TextBox Text="Organization Name" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}"/>
                                    <TextBox Text="Activity description"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>


                    <!--Two Column Section-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!--Left Section Column-->
                        <StackPanel Grid.Column="0" Margin="0,10,5,0">
                            <!--Skill-->
                            <StackPanel Margin="0,10,0,10">
                                
                                    <TextBox Style="{DynamicResource TitleTextBox}" Text="SKILL"/>
                                
                                <TextBox Text="Skill Name" Margin="0,10,0,0"/>
                            </StackPanel>

                            <!--References-->
                            <StackPanel Margin="0,10,0,10">
                                
                                    <TextBox Style="{DynamicResource TitleTextBox}" Text="REFERENCES"/> 
                                
                                <TextBox Text="Reference information including name, title and contact information" Margin="0,10,0,0"/>
                            </StackPanel>
                            <!--Additional information-->
                            <StackPanel Margin="0,10,0,10">
                                
                                    <TextBox Style="{DynamicResource TitleTextBox}" Text="ADDITIONAL INFORMATION"/>
                                
                                <TextBox Text="Fill in a additional information" Margin="0,10,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!--Right Section Column-->
                        <StackPanel Grid.Column="1" Margin="5,10,0,0">
                            <!--Certifications-->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,10,0,10">
                                    
                                        <TextBox Style="{DynamicResource TitleTextBox}" Text="CERTIFICATIONS"/>
                                    
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="Certification Name" Margin="0,10,0,0"/>
                                        <TextBox Grid.Column="1" Text="Time" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!--Honors & Awards-->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,10,0,10">
                                    
                                        <TextBox Style="{DynamicResource TitleTextBox}" Text="HONORS &amp; AWARDS"/>
                                    
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="Certification Name" Margin="0,10,0,0"/>
                                        <TextBox Grid.Column="1" Text="Time" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!--INTEREST-->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,10,0,10">
                                    <TextBox Style="{DynamicResource TitleTextBox}" Text="INTEREST"/>
                                    <TextBox Grid.Row="1" Text="Interest Name" Margin="0,10,0,16"/>
                                </StackPanel>
                            </Grid>

                        </StackPanel>
                    </Grid>
                    <!-- Additional Sections remain unchanged -->
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
